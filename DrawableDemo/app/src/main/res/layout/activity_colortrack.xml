<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.rg.drawabledemo.myview.ColorTrackView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/colorTrackView1"
            android:background="@android:color/holo_blue_bright"
            app:text="@string/hello_world"
            app:text_size="15sp"
            app:text_origin_color="@android:color/black"
            app:text_change_color="@android:color/holo_red_dark"
            app:direction="left"
            android:padding="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.example.rg.drawabledemo.myview.ColorTrackView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/colorTrackView2"
            android:background="@android:color/holo_blue_bright"
            app:text="@string/hello_world"
            app:text_size="15sp"
            app:text_origin_color="@android:color/black"
            app:text_change_color="@android:color/holo_red_dark"
            app:direction="left"
            android:padding="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.example.rg.drawabledemo.myview.ColorTrackView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/colorTrackView3"
            android:background="@android:color/holo_blue_bright"
            app:text="@string/hello_world"
            app:text_size="15sp"
            app:text_origin_color="@android:color/black"
            app:text_change_color="@android:color/holo_red_dark"
            app:direction="left"
            android:padding="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.example.rg.drawabledemo.myview.ColorTrackView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/colorTrackView4"
            android:background="@android:color/holo_blue_bright"
            app:text="@string/hello_world"
            app:text_size="15sp"
            app:text_origin_color="@android:color/black"
            app:text_change_color="@android:color/holo_red_dark"
            app:direction="left"
            android:padding="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>